<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Flowxel.UI.Controls.Drawing">

    <ControlTheme x:Key="{x:Type controls:DrawingCanvasControl}"
                  TargetType="controls:DrawingCanvasControl">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="CanvasBackground" Value="{DynamicResource fxBackgroundBrush}" />
        <Setter Property="ShapeStroke" Value="{DynamicResource fxAccentBrush}" />
        <Setter Property="SelectedStroke" Value="{DynamicResource fxAccentBrush}" />
        <Setter Property="PreviewStroke" Value="{DynamicResource fxWarningBrush}" />
        <Setter Property="HoverStroke" Value="{DynamicResource fxWarningBrush}" />
        <Setter Property="ComputedStroke" Value="{DynamicResource fxSuccessBrush}" />
        <Setter Property="CanvasBoundaryStroke" Value="{DynamicResource fxBorderSubtleBrush}" />
        <Setter Property="HandleStroke" Value="{DynamicResource fxAccentBrush}" />
        <Setter Property="HandleFill" Value="{DynamicResource fxSurfaceBrush}" />
    </ControlTheme>

</ResourceDictionary>
