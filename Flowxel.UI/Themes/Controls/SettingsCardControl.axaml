<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Flowxel.UI.Controls">

    <ControlTheme x:Key="{x:Type controls:SettingsCardControl}" TargetType="controls:SettingsCardControl">
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Root"
                        Background="{DynamicResource fxSurfaceBrush}"
                        BorderBrush="{DynamicResource fxBorderSubtleBrush}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource fxCornerRadiusM}"
                        Padding="{DynamicResource fxPaddingCard}">
                    <Grid ColumnDefinitions="Auto,*,Auto">

                        <!-- Icon container -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IconData, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <PathIcon Data="{Binding IconData, RelativeSource={RelativeSource TemplatedParent}}"
                                      Width="{DynamicResource fxIconM}" Height="{DynamicResource fxIconM}"
                                      Foreground="{DynamicResource fxForegroundBrush}" />
                        </Border>

                        <!-- Header + Description -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="12,0,12,0">
                            <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="{DynamicResource fxFontSizeL}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource fxForegroundBrush}" />
                            <TextBlock Text="{Binding Description, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="{DynamicResource fxFontSizeM}"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource fxForegroundSecondaryBrush}"
                                       IsVisible="{Binding Description, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>

                        <!-- Chevron -->
                        <PathIcon Grid.Column="2"
                                  Width="12" Height="12"
                                  VerticalAlignment="Center"
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z"
                                  Foreground="{DynamicResource fxForegroundBrush}" />

                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:pointerover /template/ Border#PART_Root">
            <Setter Property="Background" Value="{DynamicResource fxHoverBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource fxBorderBrush}" />
        </Style>

        <Style Selector="^:pressed /template/ Border#PART_Root">
            <Setter Property="Background" Value="{DynamicResource fxPressedBrush}" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
