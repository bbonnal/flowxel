<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Flowxel.UITester.ViewModels"
             xmlns:ruiRibbon="using:Flowxel.UI.Controls.Ribbon"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Flowxel.UITester.Views.InfoBarTestingPageView"
             x:DataType="vm:InfoBarTestingPageViewModel">

    <StackPanel Margin="24" Spacing="16">
        <TextBlock Text="InfoBar Testing"
                   FontSize="24"
                   FontWeight="SemiBold" />
        <TextBlock Text="Test the InfoBar control by clicking the buttons below."
                   Foreground="{DynamicResource fxForegroundSecondaryBrush}" />

        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
            <ruiRibbon:RibbonButton Header="Info"
                                    Command="{Binding ShowInfoCommand}" />
            <ruiRibbon:RibbonButton Header="Success"
                                    Command="{Binding ShowSuccessCommand}" />
            <ruiRibbon:RibbonButton Header="Warning"
                                    Command="{Binding ShowWarningCommand}" />
            <ruiRibbon:RibbonButton Header="Error"
                                    Command="{Binding ShowErrorCommand}" />
            <ruiRibbon:RibbonButton Header="Close"
                                    Command="{Binding CloseCommand}" />
        </StackPanel>

        <TextBlock Text="{Binding LastResult}"
                   IsVisible="{Binding LastResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   FontWeight="SemiBold"
                   Margin="0,8,0,0" />
    </StackPanel>
</UserControl>
